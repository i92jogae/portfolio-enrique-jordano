---
interface Props {
    title: string
    company: string
    description: string
    descriptionPoints: string[] 
    link?: string
    date: string
}
const { title, company, description, descriptionPoints, link, date} = Astro.props
---

<div class="absolute w-3 h-3 bg-yellow-200 rounded-full mt-1.5 -start-1.5 border border-yellow-200 dark:border-gray-900 dark:bg-gray-700">

</div>
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-5">
    <div >
        <h3 class="text-lg font-semibold text-yellow-200">
            {title}
        </h3>
        <h4 class="text-base font-medium">
            {company}
        </h4>
        <time class="text-xs md:text-sm font-normal leading-none text-gray-200/70">
            {date}
        </time>
    </div>

    <div class="md:col-span-2">
        <p class="mb-4 text-sm md:text-base font-normal text-gray-200 text-pretty">
            {description}
        </p>
        <ul class="list-disc pl-5">
            {descriptionPoints.map((point) => (
              <li class="mb-2 text-sm md:text-base text-gray-200">{point}</li>
            ))}
        </ul>
        {
            link && (
                <a href={link} class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                    Saber m√°s...
                    <svg class="w-3 h-3 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                    </svg>
                </a>
            )
        }
    </div>
</div>